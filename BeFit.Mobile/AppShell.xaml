<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BeFit.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BeFit.Mobile.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="BeFit">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="{StaticResource Primary}">
            <Label Text="BeFit" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Typy ćwiczeń" Icon="dumbbell.png">
        <ShellContent ContentTemplate="{DataTemplate views:ExerciseTypesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Sesje treningowe" Icon="calendar.png">
        <ShellContent ContentTemplate="{DataTemplate views:TrainingSessionsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Wykonane ćwiczenia" Icon="list.png">
        <ShellContent ContentTemplate="{DataTemplate views:TrainingEntriesPage}" />
    </FlyoutItem>

</Shell>
